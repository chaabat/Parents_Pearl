{
    "info": {
        "name": "Parents Pearl API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080",
            "type": "string"
        },
        {
            "key": "admin_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "parent_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "child_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "child_id",
            "value": "",
            "type": "string"
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "pm.request.headers.add({",
                    "    key: 'Content-Type',",
                    "    value: 'application/json'",
                    "});"
                ]
            }
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.collectionVariables.set(\"parent_token\", jsonData.token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/auth/login",
                        "body": {
                            "mode": "raw",
                            "raw": {
                                "email": "parent@test.com",
                                "password": "parent123"
                            }
                        }
                    }
                },
                {
                    "name": "Register Parent",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/auth/register/parent",
                        "header": {
                            "Content-Type": "application/json"
                        },
                        "body": {
                            "mode": "raw",
                            "raw": {
                                "firstName": "John",
                                "lastName": "Doe",
                                "email": "parent@test.com",
                                "password": "parent123",
                                "phoneNumber": "+1234567890",
                                "address": {
                                    "street": "123 Main St",
                                    "city": "Boston",
                                    "state": "MA",
                                    "zipCode": "02108",
                                    "country": "USA"
                                },
                                "preferences": {
                                    "emailNotifications": true,
                                    "pushNotifications": true,
                                    "language": "en",
                                    "timezone": "America/New_York"
                                }
                            }
                        }
                    },
                    "response": [
                        {
                            "name": "Success",
                            "originalRequest": {
                                "method": "POST",
                                "url": "{{base_url}}/api/auth/register/parent"
                            },
                            "status": "OK",
                            "code": 200,
                            "header": {
                                "Content-Type": "application/json"
                            },
                            "body": {
                                "id": "65cd8f3e1d2c543b3a123456",
                                "firstName": "John",
                                "lastName": "Doe",
                                "email": "parent@test.com",
                                "role": "PARENT",
                                "status": "ACTIVE",
                                "createdAt": "2024-02-15T10:30:00Z",
                                "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                            }
                        }
                    ]
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/auth/logout",
                        "headers": {
                            "Authorization": "Bearer {{parent_token}}"
                        }
                    }
                },
                {
                    "name": "Refresh Token",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/api/auth/refresh-token",
                        "headers": {
                            "Authorization": "Bearer {{parent_token}}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Parent",
            "item": [
                {
                    "name": "Child Management",
                    "item": [
                        {
                            "name": "Create Child",
                            "event": [
                                {
                                    "listen": "test",
                                    "script": {
                                        "exec": [
                                            "var jsonData = pm.response.json();",
                                            "pm.collectionVariables.set(\"child_id\", jsonData.id);"
                                        ],
                                        "type": "text/javascript"
                                    }
                                }
                            ],
                            "request": {
                                "method": "POST",
                                "url": "{{base_url}}/api/parent/children",
                                "headers": {
                                    "Content-Type": "application/json",
                                    "Authorization": "Bearer {{parent_token}}"
                                },
                                "body": {
                                    "mode": "raw",
                                    "raw": {
                                        "firstName": "Jane",
                                        "lastName": "Doe",
                                        "email": "child@test.com",
                                        "password": "child123"
                                    }
                                }
                            }
                        },
                        {
                            "name": "Get Child",
                            "request": {
                                "method": "GET",
                                "url": "{{base_url}}/api/parent/children/{id}"
                            }
                        },
                        {
                            "name": "Update Child",
                            "request": {
                                "method": "PUT",
                                "url": "{{base_url}}/api/parent/children/{id}"
                            }
                        },
                        {
                            "name": "Delete Child",
                            "request": {
                                "method": "DELETE",
